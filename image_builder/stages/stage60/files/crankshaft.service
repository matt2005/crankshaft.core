[Unit]
Description=Crankshaft Automotive Infotainment System
Documentation=https://github.com/opencardev/crankshaft.core
After=graphical.target network-online.target
Wants=network-online.target
Requires=graphical.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/usr/lib/crankshaft

# Environment configuration
Environment="QT_QPA_PLATFORM=eglfs"
Environment="QML2_IMPORT_PATH=/usr/lib/crankshaft/extensions"
Environment="CRANKSHAFT_CONFIG=/etc/crankshaft/config.ini"
Environment="CRANKSHAFT_DISPLAY=:0"

# Executable
ExecStart=/usr/bin/crankshaft-ui

# Restart policy
Restart=always
RestartSec=5s
StartLimitBurst=3
StartLimitIntervalSec=60s

# Resource limits
LimitNOFILE=4096
MemoryMax=1.5G

# Security hardening (Phase 2)
# TODO: Enable when security hardening is implemented
# PrivateTmp=true
# ProtectSystem=strict
# ProtectHome=true
# NoNewPrivileges=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=crankshaft

[Install]
WantedBy=graphical.target
