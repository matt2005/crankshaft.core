set -e
export DEBIAN_FRONTEND=noninteractive

case "$1" in
    configure)
        # Add crankshaft user to required groups for display and hardware access
        usermod -a -G video,audio,input,render,plugdev crankshaft 2>/dev/null || true
        
        # Create slim-ui specific directories
        mkdir -p /var/lib/crankshaft/slim-ui || true
        chown -R crankshaft:crankshaft /var/lib/crankshaft || true
        
        # Set permissions for QML cache directory
        mkdir -p /var/cache/crankshaft || true
        chown -R crankshaft:crankshaft /var/cache/crankshaft || true
        
        # Reload systemd and enable service when running under systemd
        if command -v systemctl >/dev/null 2>&1 && [ -d /run/systemd/system ]; then
            systemctl daemon-reload >/dev/null 2>&1 || true
            systemctl enable crankshaft-slim-ui.service >/dev/null 2>&1 || true
        else
            echo "Systemd not detected; skipping service enable." >&2
        fi
        
        echo "Crankshaft Slim UI installed successfully"
        echo "Service enabled and will start on boot"
        echo "To start now: sudo systemctl start crankshaft-slim-ui"
        echo "Note: UI includes integrated AndroidAuto support"
    ;;
esac

exit 0
